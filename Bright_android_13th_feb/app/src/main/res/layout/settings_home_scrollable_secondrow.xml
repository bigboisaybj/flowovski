<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_row_fragment_container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.bright.bright.home.HomeScreen">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/secondRowChildConstrainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/second_row_childContainer"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="109dp">

            <FrameLayout
                android:id="@+id/second_row_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

            </FrameLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cardMid"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_goneMarginLeft="5dp"
            app:layout_goneMarginRight="5dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/searchConstraint"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/suggestionOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Sug1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="1dp"
                    android:visibility="gone"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/suggestionImageButtonCentre" />

                <TextView
                    android:id="@+id/suggestionTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Sug2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/suggestionImageButtonLeft"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="@+id/suggestionImageButtonLeft"
                    android:layout_marginLeft="0dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="@+id/suggestionImageButtonLeft"
                    app:layout_constraintHorizontal_bias="1.0" />

                <TextView
                    android:id="@+id/suggestionThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sug3"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/suggestionImageButtonRight"
                    app:layout_constraintVertical_bias="0.333"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    app:layout_constraintRight_toRightOf="@+id/suggestionImageButtonRight"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintLeft_toLeftOf="@+id/suggestionImageButtonRight"
                    app:layout_constraintHorizontal_bias="1.0" />

                <ImageButton
                    android:id="@+id/suggestionImageButtonLeft"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/square_orange"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintRight_toLeftOf="@+id/suggestionImageButtonCentre"
                    android:layout_marginRight="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    app:layout_constraintVertical_bias="0.19999999" />

                <ImageButton
                    android:id="@+id/suggestionImageButtonCentre"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/square_orange"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    android:visibility="gone"
                    app:layout_constraintVertical_bias="0.19999999" />

                <ImageButton
                    android:id="@+id/suggestionImageButtonRight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/square_orange"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintLeft_toRightOf="@+id/suggestionImageButtonCentre"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone"
                    app:layout_constraintVertical_bias="0.19999999" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="5dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_SecondRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-16dp"
                    android:overScrollMode="never"
                    android:paddingLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/settingsSecondRowScrollView"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:id="@+id/settingsSecondRowScrollView"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:overScrollMode="never"
                    android:paddingLeft="10dp"
                    android:scrollbars="none"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/scrollLayoutSecondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textAlignment="center">

                        <TextView
                            android:id="@+id/titleBusiness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp"
                            android:text="Business"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintBottom_toTopOf="@+id/titlePayment"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/recycler_view_SecondRow" />

                        <TextView
                            android:id="@+id/titlePayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Account"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/titleDietFilters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Diet Filters"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="@+id/titleBusiness"
                            app:layout_constraintTop_toBottomOf="@+id/titleBusiness" />

                        <TextView
                            android:id="@+id/titlePayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Payment"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintTop_toBottomOf="@+id/titleDietFilters" />


                        <TextView
                            android:id="@+id/titleHelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Help"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintHorizontal_bias="0.4"
                            app:layout_constraintTop_toBottomOf="@+id/titlePayment" />


                        <TextView
                            android:id="@+id/titleAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="About"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintTop_toBottomOf="@+id/titleHelp" />


                        <TextView
                            android:id="@+id/titleCareers"
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="5dp"
                            android:text="Careers"
                            android:textAlignment="center"
                            android:textSize="16.5sp"
                            app:layout_constraintTop_toBottomOf="@+id/titleCareers" />


                    </LinearLayout>
                </ScrollView>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/searchEdit"
            android:layout_width="268dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardMid" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
