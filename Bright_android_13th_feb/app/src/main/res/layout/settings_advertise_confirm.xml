<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="horizontal"
    tools:context="com.bright.bright.home.HomeScreen">

    <android.support.v7.widget.CardView
        android:id="@+id/advertiseConfirmCard"
        android:layout_width="337dp"
        android:layout_height="121dp"
        android:layout_margin="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_goneMarginLeft="5dp"
        app:layout_goneMarginRight="5dp"
        tools:layout_editor_absoluteY="20dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/businessMenuQuestion"
                android:layout_width="287dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Please upload the following photos"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/buttonLeftCard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/square_orange"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:layout_constraintRight_toLeftOf="@+id/buttonCentreCard"
                app:layout_constraintTop_toBottomOf="@+id/businessMenuQuestion" />

            <ImageButton
                android:id="@+id/buttonCentreCard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/square_orange"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/businessMenuQuestion" />

            <ImageButton
                android:id="@+id/buttonRightCard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/square_orange"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toRightOf="@+id/buttonCentreCard"
                app:layout_constraintTop_toBottomOf="@+id/businessMenuQuestion" />

            <TextView
                android:id="@+id/zero_to_one_YearCard"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Kitchen"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/buttonLeftCard"
                app:layout_constraintLeft_toLeftOf="@+id/buttonLeftCard"
                app:layout_constraintRight_toRightOf="@+id/buttonLeftCard"
                app:layout_constraintTop_toTopOf="@+id/buttonLeftCard" />

            <TextView
                android:id="@+id/one_to_three_yearsCard"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Guest Toilet"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/buttonCentreCard"
                app:layout_constraintLeft_toLeftOf="@+id/buttonCentreCard"
                app:layout_constraintRight_toRightOf="@+id/buttonCentreCard"
                app:layout_constraintTop_toTopOf="@+id/buttonCentreCard" />

            <TextView
                android:id="@+id/three_plus_yearsCard"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Upload Later"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/buttonRightCard"
                app:layout_constraintLeft_toLeftOf="@+id/buttonRightCard"
                app:layout_constraintRight_toRightOf="@+id/buttonRightCard"
                app:layout_constraintTop_toTopOf="@+id/buttonRightCard" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>